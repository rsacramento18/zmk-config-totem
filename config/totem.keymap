        compatible = "zmk,combos";

        ACENTO {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <8 9>;
        };

        Tilde {
            bindings = <&kp NUHS>;
            key-positions = <18 19>;
        };

        Backslash {
            bindings = <&kp LS(NUMBER_7)>;
            key-positions = <29 30>;
